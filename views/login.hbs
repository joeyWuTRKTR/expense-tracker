<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h4 class="text-center mb-3">Account Login</h4>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <input type="email" class="form-control" name="email" id="email" placeholder="Email">
        </div>

        <div class="form-gorup">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        
        <div class="form-group button mt-3">
          <button type="submit" class="btn btn-success btn-block">Login</button>
          <a href="/auth/facebook" class="btn btn-info btn-block mt-3">Facebook Login</a>
        </div>

        <div class="form-group">
          <p class="lead mt-2">No account? <a href="./register">register</a></p>
        </div>
      </form>
    </div>
  </div>
</div>
</div>